@startuml
title Endpoints Completos - API Recetas del Mundo
skinparam monochrome true
skinparam defaultFontSize 20
skinparam nodesep 6
skinparam ranksep 16
left to right direction
scale 1.12

package "Autenticación" {
  [POST /auth/register]
  [POST /auth/login]
}

package "Usuarios" {
  [GET /usuarios]
  [POST /usuarios]
  [GET /usuarios/{id}]
  [PUT /usuarios/{id}]
  [DELETE /usuarios/{id}]
}

package "Recetas" {
  [GET /recetas]
  [POST /recetas]
  [GET /recetas/{id}]
  [PUT /recetas/{id}]
  [DELETE /recetas/{id}]

  [GET /recetas/usuario/{usuarioId}]
  [GET /recetas/trending]
  [GET /recetas/pais/{idPais}]
  [GET /recetas/nombre/{nombre}]
  [GET /recetas/del-dia]
  [GET /recetas/carrusel]
}

package "Países" {
  [GET /paises]
  [POST /paises]
  [GET /paises/{id}]
  [PUT /paises/{id}]
  [DELETE /paises/{id}]
  [GET /paises/nombre/{nombre}]
}

package "Categorías" {
  [GET /categorias]
  [POST /categorias]
  [GET /categorias/{id}]
  [PUT /categorias/{id}]
  [DELETE /categorias/{id}]
}

package "Admin - Perfil" {
  [GET /admin/perfil]
  [POST /admin/perfil]
  [GET /admin/perfil/{id}]
  [PUT /admin/perfil/{id}]
  [DELETE /admin/perfil/{id}]
}

package "Admin - Me Gusta" {
  [GET /admin/megusta]
  [POST /admin/megusta]
  [GET /admin/megusta/{id}]
  [PUT /admin/megusta/{id}]
  [DELETE /admin/megusta/{id}]
  [POST /admin/megusta/toggle]
  [GET /admin/megusta/receta/{recetaId}/count]
}

package "Admin - Favoritos" {
  [GET /admin/favoritos]
  [POST /admin/favoritos]
  [GET /admin/favoritos/{id}]
  [PUT /admin/favoritos/{id}]
  [DELETE /admin/favoritos/{id}]
}

package "Admin - Estrellas" {
  [GET /admin/estrellas]
  [POST /admin/estrellas]
  [GET /admin/estrellas/{id}]
  [PUT /admin/estrellas/{id}]
  [DELETE /admin/estrellas/{id}]
  [GET /admin/estrellas/receta/{recetaId}]
